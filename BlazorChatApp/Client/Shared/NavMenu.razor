<MudPaper Width=@naviWith Class="d-inline-flex py-1" Square="true">
    <MudNavMenu Class="mud-width-full">        
        <MudNavLink Href="/" Icon="@Icons.Filled.Dashboard">Home</MudNavLink>
        <MudDivider Class="my-2" />
        <MudNavGroup Title="툴즈" Icon="@Icons.Filled.Settings" @bind-Expanded=collapseNavMenu >            
            <MudNavLink Href="chatroom" Icon="@Icons.Filled.AdminPanelSettings">MetaChat</MudNavLink>
            <MudNavLink Href="counter" Icon="@Icons.Filled.AdminPanelSettings">Count</MudNavLink>
        </MudNavGroup>

    </MudNavMenu>
</MudPaper>

@code {
    private bool collapseNavMenu = true;

    private string naviWith = "250px";

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}